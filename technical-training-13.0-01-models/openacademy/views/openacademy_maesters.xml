<odoo>
    <record model="ir.actions.act_window" id="action_maesters">
        <field name="name">Maesters</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record model="ir.ui.view" id="openacademy_maester_form">
        <field name="name">openacademy.maester.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_simple_form" />
        <field name="arch" type="xml">
            <page string="Open Academy" position="after">
                <field name="session_ids"/>
            </page>
        </field>
    </record>
</odoo>